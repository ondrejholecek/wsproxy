{
	"manifest_version": 2,
 	"name": "WSExecute",
 	"description": "Execute JavaScript commands received over connected Websocket",
	"version": "1.0",
	"author": "Ondrej Holecek",

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"icons": {
		"128": "execute-128.png"
	},

	"browser_action": {
		"default_icon": "execute-128.png"
	},

	"background": {
		"scripts": ["ws.js"],
		"persistent": true
	},

	"permissions": [
		"tabs",
		"https://monitor.prglab.cz/"
	]
}

